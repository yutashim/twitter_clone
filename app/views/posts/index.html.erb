<h3 class="page_title">投稿一覧</h3>
<% @posts.each do |post| %>
  <div class="post_container">
    <div class="content_area">
      <%= post.content %>
    </div>
    <div class="edit_destroy_nav">
      <span><%= link_to "編集", edit_post_path(post.id) %></span>
      <span><%= link_to "削除", post_path(post.id), method: :delete %></span>
    </div>
  </div>
<% end %>
